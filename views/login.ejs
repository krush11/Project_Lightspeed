<html>

<head>
    <title>Project Lightspeed</title>
    <link rel="icon" href="/imgs/logo.jpg">
    <link rel="stylesheet" href="/css/_header.scss" type="text/css">
    <link rel="stylesheet" href="/css/_footer.scss" type="text/css">
    <link rel="stylesheet" href="/css/login.scss" type="text/css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>

<body>
    <%- include('_header'); %>
        <main>
            <section>
                <div class="login-box">
                    <h2>Sign In</h2>
                    <form id="signin" action="/login/create_session" method="POST">
                        <div class="user-box">
                            <input type="text" name="user" required>
                            <label>Username</label>
                        </div>
                        <div class="user-box">
                            <input type="password" name="password" required>
                            <label>Password</label>
                        </div>
                        <a href="">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                            <input type="submit" id="submit" value="Lets Go!!">
                        </a>
                    </form>
                </div>
            </section>
            <section>
                <div class="login-box">
                    <h2>Sign Up for Lightspeed&#128640;</h2>
                    <form id="signup" action="/login/create_user" method="POST">
                        <div class="user-box">
                            <input type="text" name="country" required>
                            <label>Country Name</label>
                        </div>
                        <div class="user-box">
                            <input type="text" name="user" required>
                            <label>Username</label>
                        </div>
                        <div class="user-box">
                            <input type="password" name="password" required>
                            <label>Password</label>
                        </div>
                        <div class="user-box">
                            <input type="password" name="confirm_password" required>
                            <label>Confirm Password</label>
                        </div>
                        <div class="">
                            <input type="checkbox" name="checkbox" required>
                            <label style="font-size: larger;">I agree to the Terms and Conditions</label>
                        </div>
                        <a href="">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                            <input type="submit" id="submit" value="Lightspeed Ahead&#128640;">
                        </a>
                    </form>
                </div>
            </section>
        </main>
</body>

</html>